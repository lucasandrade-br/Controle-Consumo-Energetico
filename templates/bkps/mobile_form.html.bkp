<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Leitura - Energia</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome para √≠cones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .main-card {
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        
        .btn-submit {
            padding: 15px;
            font-size: 1.2rem;
            border-radius: 10px;
        }
        
        .form-select, .form-control {
            padding: 15px;
            border-radius: 10px;
            font-size: 1.1rem;
        }
        
        .alert {
            border-radius: 10px;
        }
        
        .header-icon {
            font-size: 3rem;
            color: #667eea;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                
                <!-- Card Principal -->
                <div class="card main-card">
                    <div class="card-body p-4">
                        
                        <!-- Cabe√ßalho -->
                        <div class="text-center mb-4">
                            <i class="fas fa-bolt header-icon"></i>
                            <h2 class="mt-2">Registro de Leitura</h2>
                            <p class="text-muted">Sistema de Monitoramento de Energia</p>
                        </div>
                        
                        <!-- Aviso de Rascunho -->
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Sistema de Valida√ß√£o:</strong> As leituras s√£o salvas como RASCUNHO para revis√£o posterior.
                        </div>
                        
                        <!-- Alertas -->
                        <div id="alertContainer"></div>
                        
                        <!-- Formul√°rio -->
                        <form id="formLeitura">
                            
                            <!-- Sele√ß√£o do Quadro -->
                            <div class="mb-4">
                                <label for="quadro_id" class="form-label">
                                    <i class="fas fa-map-marker-alt"></i> Selecione o Quadro
                                </label>
                                <select class="form-select" id="quadro_id" name="quadro_id" required>
                                    <option value="">-- Escolha um quadro --</option>
                                    {% for quadro in quadros %}
                                    <option value="{{ quadro.id }}">
                                        {{ quadro.nome }} - {{ quadro.localizacao }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                            
                            <!-- Informa√ß√£o da √öltima Leitura -->
                            <div id="ultimaLeituraContainer" class="mb-4" style="display: none;">
                                <div class="alert alert-info">
                                    <h6 class="mb-2">
                                        <i class="fas fa-info-circle"></i> √öltima Leitura Registrada
                                    </h6>
                                    <div id="ultimaLeituraInfo">
                                        <!-- Carregado dinamicamente via JavaScript -->
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Valor da Leitura -->
                            <div class="mb-4">
                                <label for="novo_valor" class="form-label">
                                    <i class="fas fa-tachometer-alt"></i> Valor da Leitura (kWh)
                                </label>
                                <input 
                                    type="number" 
                                    class="form-control" 
                                    id="novo_valor" 
                                    name="novo_valor" 
                                    step="0.01" 
                                    placeholder="Ex: 12345.67"
                                    required
                                >
                            </div>
                            
                            <!-- Bot√£o de Envio -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-submit">
                                    <i class="fas fa-save"></i> Registrar Leitura
                                </button>
                            </div>
                            
                        </form>
                        
                        <!-- Link para Hist√≥rico -->
                        <div class="text-center mt-4">
                            <a href="/historico" class="btn btn-outline-secondary">
                                <i class="fas fa-history"></i> Ver Hist√≥rico
                            </a>
                        </div>
                        
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    
    <!-- Modal de Confirma√ß√£o de Reset -->
    <div class="modal fade" id="modalConfirmReset" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle"></i> Inconsist√™ncia Detectada
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>O valor informado √© MENOR que a leitura anterior!</strong></p>
                    <p id="modalMensagem"></p>
                    <hr>
                    <p class="text-danger">
                        <i class="fas fa-redo"></i> 
                        O medidor zerou/virou? Confirme para registrar com alerta de RESET.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-warning" id="btnConfirmarReset">
                        <i class="fas fa-check"></i> Confirmar Reset
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- JavaScript para Submiss√£o do Formul√°rio -->
    <script>
        let dadosInconsistencia = null;
        const modalConfirmReset = new bootstrap.Modal(document.getElementById('modalConfirmReset'));
        
        // Buscar √∫ltima leitura quando selecionar um quadro
        document.getElementById('quadro_id').addEventListener('change', async (e) => {
            const quadroId = e.target.value;
            const container = document.getElementById('ultimaLeituraContainer');
            const infoDiv = document.getElementById('ultimaLeituraInfo');
            
            if (!quadroId) {
                container.style.display = 'none';
                return;
            }
            
            try {
                const response = await fetch(`/quadro/${quadroId}/ultima-leitura`);
                const data = await response.json();
                
                if (data.existe) {
                    infoDiv.innerHTML = `
                        <strong>Valor:</strong> ${data.valor.toFixed(2)} kWh<br>
                        <strong>Data:</strong> ${data.data}
                        ${data.alerta_reset ? '<br><span class="badge bg-warning text-dark">‚ö†Ô∏è Reset Detectado</span>' : ''}
                    `;
                    container.style.display = 'block';
                } else {
                    infoDiv.innerHTML = `
                        <span class="text-muted">
                            <i class="fas fa-exclamation-circle"></i> ${data.mensagem}
                        </span>
                    `;
                    container.style.display = 'block';
                }
            } catch (error) {
                console.error('Erro ao buscar √∫ltima leitura:', error);
                container.style.display = 'none';
            }
        });
        
        // Submiss√£o do Formul√°rio Principal
        document.getElementById('formLeitura').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const alertContainer = document.getElementById('alertContainer');
            
            try {
                const response = await fetch('/registrar', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    // Sucesso
                    const icone = data.tipo === 'rascunho' ? 'save' : 'check-circle';
                    const tipoMsg = data.tipo === 'rascunho' ? 'üìù RASCUNHO' : '';
                    mostrarAlerta('success', `${tipoMsg} ${data.mensagem}`);
                    e.target.reset();
                } else if (data.inconsistencia) {
                    // Inconsist√™ncia detectada - pede confirma√ß√£o
                    dadosInconsistencia = {
                        quadro_id: formData.get('quadro_id'),
                        novo_valor: formData.get('novo_valor'),
                        quadro_nome: data.quadro_nome,
                        valor_anterior: data.valor_anterior
                    };
                    
                    document.getElementById('modalMensagem').innerHTML = `
                        <strong>Quadro:</strong> ${data.quadro_nome}<br>
                        <strong>√öltima Leitura:</strong> ${data.valor_anterior} kWh<br>
                        <strong>Nova Leitura:</strong> ${data.novo_valor} kWh
                    `;
                    
                    modalConfirmReset.show();
                } else {
                    // Erro
                    mostrarAlerta('danger', data.erro || 'Erro ao registrar leitura');
                }
                
            } catch (error) {
                mostrarAlerta('danger', 'Erro de conex√£o com o servidor');
                console.error('Erro:', error);
            }
        });
        
        // Confirma√ß√£o de Reset
        document.getElementById('btnConfirmarReset').addEventListener('click', async () => {
            if (!dadosInconsistencia) return;
            
            const formData = new FormData();
            formData.append('quadro_id', dadosInconsistencia.quadro_id);
            formData.append('novo_valor', dadosInconsistencia.novo_valor);
            
            try {
                const response = await fetch('/confirmar_reset', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    modalConfirmReset.hide();
                    const tipoMsg = data.tipo === 'rascunho' ? 'üìù RASCUNHO COM RESET' : '';
                    mostrarAlerta('warning', `${tipoMsg} ${data.mensagem}`);
                    document.getElementById('formLeitura').reset();
                    dadosInconsistencia = null;
                } else {
                    mostrarAlerta('danger', data.erro || 'Erro ao confirmar reset');
                }
                
            } catch (error) {
                mostrarAlerta('danger', 'Erro de conex√£o com o servidor');
                console.error('Erro:', error);
            }
        });
        
        // Fun√ß√£o para mostrar alertas
        function mostrarAlerta(tipo, mensagem) {
            const alertContainer = document.getElementById('alertContainer');
            const icones = {
                'success': 'check-circle',
                'danger': 'exclamation-circle',
                'warning': 'exclamation-triangle'
            };
            
            alertContainer.innerHTML = `
                <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${icones[tipo]}"></i> ${mensagem}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            // Auto-remover ap√≥s 5 segundos
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>
