<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Leitura - ENERGY.io</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #4F46E5;
            --bg-color: #F3F4F6;
            --text-primary: #111827;
            --text-secondary: #6B7280;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-color);
            min-height: 100vh;
            padding: 20px;
            color: var(--text-primary);
        }
        
        .main-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            max-width: 600px;
            margin: 0 auto;
        }
        
        .header-icon {
            font-size: 3.5rem;
            color: var(--primary-color);
        }
        
        .form-select, .form-control {
            padding: 18px 16px;
            border-radius: 12px;
            font-size: 1.1rem;
            border: 2px solid #E5E7EB;
            transition: all 0.3s;
        }
        
        .form-select:focus, .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
        }
        
        .form-label {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
            font-size: 0.95rem;
        }
        
        .btn-submit {
            padding: 18px;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 12px;
            background-color: var(--primary-color);
            border: none;
            transition: all 0.3s;
        }
        
        .btn-submit:hover {
            background-color: #4338CA;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }
        
        .alert {
            border-radius: 12px;
            border: none;
        }
        
        .alert-info {
            background-color: #EEF2FF;
            color: var(--primary-color);
            border-left: 4px solid var(--primary-color);
        }
        
        .modal-content {
            border-radius: 20px;
            border: none;
        }
        
        .modal-header {
            border-top-left-radius: 20px;
            border-top-right-radius: 20px;
        }
        
        /* Mobile optimizations */
        @media (max-width: 576px) {
            body {
                padding: 16px;
            }
            
            .form-select, .form-control {
                padding: 20px 16px;
                font-size: 1.15rem;
            }
            
            .btn-submit {
                padding: 20px;
                font-size: 1.25rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                
                <div class="main-card">
                    <div class="card-body p-4 p-md-5">
                        
                        <!-- Cabe√ßalho -->
                        <div class="text-center mb-5">
                            <i class="fas fa-bolt header-icon"></i>
                            <h2 class="mt-3 fw-bold" style="color: var(--text-primary);">Registro de Leitura</h2>
                            <p class="text-muted">Sistema de Monitoramento de Energia</p>
                        </div>
                        
                        <!-- Aviso de Rascunho -->
                        <div class="alert alert-info mb-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i> 
                            <strong>Sistema de Valida√ß√£o:</strong> As leituras s√£o salvas como rascunho para revis√£o posterior.
                        </div>
                        
                        <!-- Alertas -->
                        <div id="alertContainer"></div>
                        
                        <!-- Formul√°rio -->
                        <form id="formLeitura">
                            
                            <!-- Sele√ß√£o do Quadro -->
                            <div class="mb-4">
                                <label for="quadro_id" class="form-label">
                                    <i class="fas fa-map-marker-alt me-2"></i>Selecione o Quadro
                                </label>
                                <select class="form-select form-select-lg" id="quadro_id" name="quadro_id" required>
                                    <option value="">-- Escolha um quadro --</option>
                                    {% for quadro in quadros %}
                                    <option value="{{ quadro.id }}">
                                        {{ quadro.nome }} - {{ quadro.localizacao }}
                                    </option>
                                    {% endfor %}
                                </select>
                            </div>
                            
                            <!-- Informa√ß√£o da √öltima Leitura -->
                            <div id="ultimaLeituraContainer" class="mb-4" style="display: none;">
                                <div class="alert alert-info">
                                    <h6 class="mb-2 fw-bold">
                                        <i class="fas fa-info-circle me-2"></i>√öltima Leitura Registrada
                                    </h6>
                                    <div id="ultimaLeituraInfo">
                                        <!-- Carregado dinamicamente via JavaScript -->
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Valor da Leitura -->
                            <div class="mb-4">
                                <label for="novo_valor" class="form-label">
                                    <i class="fas fa-tachometer-alt me-2"></i>Valor da Leitura (kWh)
                                </label>
                                <input 
                                    type="number" 
                                    class="form-control form-control-lg" 
                                    id="novo_valor" 
                                    name="novo_valor" 
                                    step="0.01" 
                                    placeholder="Ex: 12345.67"
                                    required
                                >
                            </div>
                            
                            <!-- Bot√£o de Envio -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-submit">
                                    <i class="fas fa-save me-2"></i> Registrar Leitura
                                </button>
                            </div>
                            
                        </form>
                        
                        <!-- Link para Hist√≥rico -->
                        <div class="text-center">
                            <a href="/historico" class="btn btn-outline-secondary w-100" style="border-radius: 12px; padding: 14px;">
                                <i class="fas fa-history me-2"></i> Ver Hist√≥rico
                            </a>
                        </div>
                        
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    
    <!-- Modal de Confirma√ß√£o de Reset -->
    <div class="modal fade" id="modalConfirmReset" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title fw-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i>Inconsist√™ncia Detectada
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>O valor informado √© MENOR que a leitura anterior!</strong></p>
                    <p id="modalMensagem"></p>
                    <hr>
                    <p class="text-danger">
                        <i class="fas fa-redo me-2"></i> 
                        O medidor zerou/virou? Confirme para registrar com alerta de RESET.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-warning" id="btnConfirmarReset">
                        <i class="fas fa-check me-2"></i>Confirmar Reset
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        let dadosInconsistencia = null;
        const modalConfirmReset = new bootstrap.Modal(document.getElementById('modalConfirmReset'));
        
        document.getElementById('quadro_id').addEventListener('change', async (e) => {
            const quadroId = e.target.value;
            const container = document.getElementById('ultimaLeituraContainer');
            const infoDiv = document.getElementById('ultimaLeituraInfo');
            
            if (!quadroId) {
                container.style.display = 'none';
                return;
            }
            
            try {
                const response = await fetch(`/quadro/${quadroId}/ultima-leitura`);
                const data = await response.json();
                
                if (data.existe) {
                    infoDiv.innerHTML = `
                        <div style="font-size: 1.05rem;">
                            <strong>Valor:</strong> ${data.valor.toFixed(2)} kWh<br>
                            <strong>Data:</strong> ${data.data}
                            ${data.alerta_reset ? '<br><span class="badge bg-warning text-dark mt-2">‚ö†Ô∏è Reset Detectado</span>' : ''}
                        </div>
                    `;
                    container.style.display = 'block';
                } else {
                    infoDiv.innerHTML = `
                        <span class="text-muted">
                            <i class="fas fa-exclamation-circle me-2"></i>${data.mensagem}
                        </span>
                    `;
                    container.style.display = 'block';
                }
            } catch (error) {
                console.error('Erro ao buscar √∫ltima leitura:', error);
                container.style.display = 'none';
            }
        });
        
        document.getElementById('formLeitura').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const alertContainer = document.getElementById('alertContainer');
            
            try {
                const response = await fetch('/registrar', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    const icone = data.tipo === 'rascunho' ? 'save' : 'check-circle';
                    const tipoMsg = data.tipo === 'rascunho' ? 'üìù RASCUNHO' : '';
                    mostrarAlerta('success', `${tipoMsg} ${data.mensagem}`);
                    e.target.reset();
                    document.getElementById('ultimaLeituraContainer').style.display = 'none';
                } else if (data.inconsistencia) {
                    dadosInconsistencia = {
                        quadro_id: formData.get('quadro_id'),
                        novo_valor: formData.get('novo_valor'),
                        quadro_nome: data.quadro_nome,
                        valor_anterior: data.valor_anterior
                    };
                    
                    document.getElementById('modalMensagem').innerHTML = `
                        <strong>Quadro:</strong> ${data.quadro_nome}<br>
                        <strong>√öltima Leitura:</strong> ${data.valor_anterior} kWh<br>
                        <strong>Nova Leitura:</strong> ${data.novo_valor} kWh
                    `;
                    
                    modalConfirmReset.show();
                } else {
                    mostrarAlerta('danger', data.erro || 'Erro ao registrar leitura');
                }
                
            } catch (error) {
                mostrarAlerta('danger', 'Erro de conex√£o com o servidor');
                console.error('Erro:', error);
            }
        });
        
        document.getElementById('btnConfirmarReset').addEventListener('click', async () => {
            if (!dadosInconsistencia) return;
            
            const formData = new FormData();
            formData.append('quadro_id', dadosInconsistencia.quadro_id);
            formData.append('novo_valor', dadosInconsistencia.novo_valor);
            
            try {
                const response = await fetch('/confirmar_reset', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    modalConfirmReset.hide();
                    const tipoMsg = data.tipo === 'rascunho' ? 'üìù RASCUNHO COM RESET' : '';
                    mostrarAlerta('warning', `${tipoMsg} ${data.mensagem}`);
                    document.getElementById('formLeitura').reset();
                    document.getElementById('ultimaLeituraContainer').style.display = 'none';
                    dadosInconsistencia = null;
                } else {
                    mostrarAlerta('danger', data.erro || 'Erro ao confirmar reset');
                }
                
            } catch (error) {
                mostrarAlerta('danger', 'Erro de conex√£o com o servidor');
                console.error('Erro:', error);
            }
        });
        
        function mostrarAlerta(tipo, mensagem) {
            const alertContainer = document.getElementById('alertContainer');
            const icones = {
                'success': 'check-circle',
                'danger': 'exclamation-circle',
                'warning': 'exclamation-triangle'
            };
            
            alertContainer.innerHTML = `
                <div class="alert alert-${tipo} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${icones[tipo]} me-2"></i>${mensagem}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            setTimeout(() => {
                alertContainer.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>
